<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        xmlns:maps="http://jmix.io/schema/maps/ui"
        caption="msg://territoryBrowse.caption"
        focusComponent="territoriesTable">
    <data readOnly="true">
        <collection id="territoriesDc"
                    class="maps.ex1.entity.Territory">
            <fetchPlan extends="_local"/>
            <loader id="territoriesDl">
                <query>
                    <![CDATA[select e from mapst_Territory e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <groupTable id="territoriesTable"
                    width="100%"
                    dataContainer="territoriesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="polygon"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="territoriesTable.create"/>
                <button id="editBtn" action="territoriesTable.edit"/>
                <button id="removeBtn" action="territoriesTable.remove"/>
            </buttonsPanel>
        </groupTable>

        <maps:geoMap id="map1" height="100%" width="100%" center="-99.755859, 39.164141" zoom="4">
            <!-- tag::territory-tile-xml[] -->
            <maps:layers>
                <maps:tile id="tileLayer"
                           urlPattern="https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png"
                           attribution="&#169; &lt;a href=&quot;https://www.openstreetmap.org/copyright&quot;&gt;OpenStreetMap&lt;/a&gt; contributors"/>
            </maps:layers>
            <!-- end::territory-tile-xml[] -->
        </maps:geoMap>
        <maps:geoMap id="map2" height="100%" width="100%" center="-99.755859, 39.164141" zoom="4">
            <!-- tag::territory-wms-xml[] -->
            <maps:layers>
                <maps:wms id="wmsLayer"
                          url="http://ows.terrestris.de/osm/service?"
                          layers="OSM-WMS"
                          format="image/png"/>
            </maps:layers>
            <!-- end::territory-wms-xml[] -->
        </maps:geoMap>
        <maps:geoMap id="map3" height="100%" width="100%" center="-99.755859, 39.164141" zoom="4">
            <!-- tag::territory-image-xml[] -->
            <maps:layers>
                <maps:image id="imageLayer"
                             image="url:https://legacy.lib.utexas.edu/maps/historical/newark_nj_1922.jpg"
                             topLeft="-74.22655, 40.773941"
                             bottomRight="-74.12544, 40.712216"
                             opacity="0.5"/>
            </maps:layers>
            <!-- end::territory-image-xml[] -->
        </maps:geoMap>
        <maps:geoMap id="map4" height="100%" width="100%" center="-99.755859, 39.164141" zoom="4">
            <!-- tag::territory-bean[] -->
            <maps:layers>
                <maps:tile id="tilesLayer" tileProvider="sample_CartoTileProvider"/>
            </maps:layers>
            <!-- end::territory-bean[] -->
        </maps:geoMap>
        <maps:geoMap id="map" height="100%" width="100%" center="-99.755859, 39.164141" zoom="4">
            <maps:layers selectedLayer="territory">
                <maps:tile id="tiles" tileProvider="sample_CartoTileProvider"/>
                <maps:vector id="territory" dataContainer="territoriesDc" editable="true"/>
            </maps:layers>
        </maps:geoMap>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
