<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        caption="msg://storeBrowse.caption"
        focusComponent="storesTable">
    <data readOnly="true">
        <collection id="storesDc"
                    class="maps.ex1.entity.Store">
            <fetchPlan extends="_local"/>
            <loader id="storesDl">
                <query>
                    <![CDATA[select e from mapst_Store e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <groupTable id="storesTable"
                    width="100%"
                    dataContainer="storesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="address"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="storesTable.create"/>
                <button id="editBtn" action="storesTable.edit"/>
                <button id="removeBtn" action="storesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
