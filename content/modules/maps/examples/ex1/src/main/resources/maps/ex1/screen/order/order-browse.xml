<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:c="http://jmix.io/schema/ui/jpql-condition"
        xmlns:maps="http://jmix.io/schema/maps/ui"
        caption="msg://orderBrowse.caption"
        focusComponent="ordersTable">
    <data readOnly="true">
        <collection id="ordersDc"
                    class="maps.ex1.entity.Order">
            <fetchPlan extends="_local"/>
            <loader id="ordersDl">
                <query>
                    <![CDATA[select e from mapst_Order e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <groupTable id="ordersTable"
                    width="100%"
                    dataContainer="ordersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="date"/>
                <column id="product"/>
                <column id="amount"/>
            </columns>
            <simplePagination/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="ordersTable.create"/>
                <button id="editBtn" action="ordersTable.edit"/>
                <button id="removeBtn" action="ordersTable.remove"/>
                <button id="showOrdersCluster" caption="msg://showOrdersCluster"/>
                <button id="showHeatMapBtn" caption="msg://showHeatMap"/>
            </buttonsPanel>
        </groupTable>
        <!-- tag::raster[] -->
        <!-- tag::vector[] -->
        <maps:geoMap id="map" height="400px" width="800px" center="-99.755859, 39.164141" zoom="4">
            <maps:layers>
            <!-- tag::tile[] -->
                <maps:tile id="tiles" tileProvider="maps_OpenStreetMap"/>
            <!-- end::tile[] -->
            <!-- end::raster[] -->
                <maps:vector id="orderLayer" dataContainer="ordersDc"/>
            <!-- tag::raster-end[] -->
            </maps:layers>
        </maps:geoMap>
        <!-- end::vector[] -->
        <!-- end::raster-end[] -->
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
