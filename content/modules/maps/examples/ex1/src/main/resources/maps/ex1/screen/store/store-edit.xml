<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        xmlns:maps="http://jmix.io/schema/maps/ui"
        caption="msg://storeEdit.caption"
        focusComponent="form">
    <data>
        <instance id="storeDc"
                  class="maps.ex1.entity.Store">
            <fetchPlan extends="_local"/>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="storeDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <textField id="addressField" property="address"/>
            </column>
        </form>
        <maps:geoMap id="map"
                     height="400px"
        width="800px"
        center="-99.755859, 39.164141"
        zoom="4">
        <maps:layers selectedLayer="salespersonLayer">
            <maps:tile id="tileLayer" tileProvider="sample_CartoTileProvider"/>
            <maps:vector id="storeLayer" dataContainer="storeDc" editable="true"/>
        </maps:layers>
    </maps:geoMap>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
