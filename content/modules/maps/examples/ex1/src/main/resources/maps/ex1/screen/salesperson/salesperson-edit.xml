<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        <!-- tag::namespace[] -->
        xmlns:maps="http://jmix.io/schema/maps/ui"
        <!-- end::namespace[] -->
        caption="msg://salespersonEdit.caption"
        focusComponent="form">
    <data>
        <instance id="salespersonDc"
                  class="maps.ex1.entity.Salesperson">
            <fetchPlan extends="_local">
                <property name="territory" fetchPlan="_instance_name">
                    <property name="name"/>
                    <property name="polygon"/>
                </property>
            </fetchPlan>
            <loader/>
        </instance>
        <instance id="territoryDc" class="maps.ex1.entity.Territory">
            <fetchPlan extends="_local"/>
            <loader id="territoryDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="salespersonDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <textField id="phoneField" property="phone"/>
                <textField id="locationField" property="location"/>
                <entityPicker id="territoryField" property="territory">
                    <actions>
                        <action id="lookup" type="entity_lookup"/>
                        <action id="clear" type="entity_clear"/>
                    </actions>
                </entityPicker>
            </column>
        </form>
        <!-- tag::salesperson-xml[] -->
        <maps:geoMap id="map"
                     height="400px" <1>
                     width="800px" <2>
                     center="-99.755859, 39.164141" <3>
                     zoom="4"> <4>
            <maps:layers selectedLayer="salespersonLayer"> <5>
                <maps:tile id="tileLayer" <6>
                           urlPattern="https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png"
                           attribution="&#169; &lt;a href=&quot;https://www.openstreetmap.org/copyright&quot;&gt;
                           OpenStreetMap&lt;/a&gt; contributors"/>
                <maps:vector id="territoryLayer" dataContainer="territoryDc"/> <7>
                <maps:vector id="salespersonLayer" <8>
                             dataContainer="salespersonDc"
                             editable="true"/>
            </maps:layers>
        </maps:geoMap>
        <!-- end::salesperson-xml[] -->
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
