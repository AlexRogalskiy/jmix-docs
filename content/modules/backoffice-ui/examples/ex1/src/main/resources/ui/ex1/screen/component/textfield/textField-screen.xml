<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://textFieldScreen.caption">

    <!-- tag::data-container[] -->
    <data>
        <instance id="customerDc" class="ui.ex1.entity.Customer">
            <loader/>
        </instance>
    </data>
    <!-- end::data-container[] -->

    <layout>
        <!-- tag::simple-text-field[] -->
        <textField id="nameField" caption="msg://ui.ex1.screen.component.textfield/name"/>
        <!-- end::simple-text-field[] -->

        <!-- tag::data-aware-text-field[] -->
        <textField dataContainer="customerDc" property="firstName" caption="msg://ui.ex1.screen.component.textfield/firstName"/>
        <!-- end::data-aware-text-field[] -->

        <!-- tag::integer-text-field[] -->
        <textField id="integerField" datatype="int" caption="msg://ui.ex1.screen.component.textfield/integerFieldName"/>
        <!-- end::integer-text-field[] -->

        <!-- tag::conversion-text-field[] -->
        <textField id="textField" conversionErrorMessage="This field can work only with Integers" datatype="int"/>
        <!-- end::conversion-text-field[] -->

        <hbox>
            <!-- tag::short-text-field[] -->
            <textField id="shortTextField" maxLength="10"/>
            <!-- end::short-text-field[] -->

            <!-- tag::text-field-label[] -->
            <label id="shortTextLabel"/>
            <!-- end::text-field-label[] -->
        </hbox>
    </layout>
</window>