<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://suggestionFieldScreen.caption">
    <!-- tag::data[] -->
    <data>
        <instance id="addressDc" class="ui.ex1.entity.Address"> <!--1-->
            <fetchPlan extends="_local"> <!--2-->
                <property name="country" fetchPlan="_instance_name"/>
            </fetchPlan>
        </instance>
        <collection id="countriesDc" class="ui.ex1.entity.Country"> <!--3-->
            <fetchPlan extends="_local"/>
            <loader id="countriesDl">
                <query>
                    <![CDATA[select e from uiex1_Country e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <!-- end::data[] -->
    <layout>
        <suggestionField id="countryField"
                         dataContainer="addressDc"
                         property="country">
            <query entityClass="ui.ex1.entity.Country" searchStringFormat="%${searchString}%" escapeValueForLike="true">
                <![CDATA[select c from uiex1_Country c where lower(c.name) like lower(:searchString) escape '\']]></query>
        </suggestionField>
        <!-- tag::suggestion-query[] -->
        <suggestionField id="countrySuggestionField">
            <query entityClass="ui.ex1.entity.Country"
                   fetchPlan="_instance_name"
                   searchStringFormat="%${searchString}%"
                   escapeValueForLike="true">
                <![CDATA[select c from uiex1_Country c where lower(c.name) like lower(:searchString) escape '\']]>
            </query>
        </suggestionField>
        <!-- end::suggestion-query[] -->
    </layout>
</window>