<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://filterScreen.caption">
    <data>
        <collection id="customersDc" class="ui.ex1.entity.Customer">
            <fetchPlan extends="_base"/>
            <loader id="customersDl">
                <query>
                    <![CDATA[select e from uiex1_Customer e]]>
                </query>
            </loader>
        </collection>
        <collection id="addressesDc" class="ui.ex1.entity.Address">
            <fetchPlan extends="_base">
                <property name="country" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="addressesDl">
                <query>
                    <![CDATA[select e from uiex1_Address e]]>
                </query>
            </loader>
        </collection>
    </data>
    <layout spacing="true">

        <filter dataLoader="customersDl">
            <properties include=".*"/>
        </filter>

        <filter dataLoader="addressesDl">
            <properties include=".*"/>
        </filter>
        <table id="addressesTable" width="100%" dataContainer="addressesDc">
            <columns>
                <column id="country"/>
            </columns>
        </table>
        <table id="customersTable" width="100%" dataContainer="customersDc">
            <columns>
                <column id="level"/>
                <column id="age"/>
                <column id="hobby"/>
                <column id="firstName"/>
            </columns>
        </table>
    </layout>
</window>