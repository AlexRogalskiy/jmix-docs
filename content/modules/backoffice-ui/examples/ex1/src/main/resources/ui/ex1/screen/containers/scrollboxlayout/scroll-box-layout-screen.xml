<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://scrollBoxLayoutScreen.caption">
    <layout>
        <hbox spacing="true">
            <!-- tag::scroll-box-default[] -->
            <scrollBox height="150px"
                       width="300px"
                       spacing="true"
                       caption="ScrollBox">
                <textArea height="600px"
                          width="270px"/>
            </scrollBox>
            <!-- end::scroll-box-default[] -->

            <label width="20px"/>

            <scrollBox height="200px"
                       width="200px"
                       orientation="horizontal"
                       scrollBars="horizontal"
                       spacing="true">
                <textArea height="150px"
                          width="400px"/>
                <textArea height="150px"
                          width="400px"/>
            </scrollBox>

            <label width="20px"/>

            <scrollBox height="150px"
                       width="150px"
                       scrollBars="both"
                       spacing="true">
                <textArea height="800px"
                          width="800px"/>
            </scrollBox>

            <!-- tag::dimensions[] -->
            <scrollBox contentMinHeight="200px"
                       contentMaxHeight="100%"
                       contentMaxWidth="AUTO"/>
            <!-- end::dimensions[] -->
        </hbox>
    </layout>
</window>