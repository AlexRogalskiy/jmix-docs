<window xmlns="http://jmix.io/schema/ui/window"
        caption="ValuePicker"
        messagesPack="sample.screen.component.valuePicker">
    <!-- tag::data[] -->
    <data>
        <instance id="userDc"
                  class="sample.entity.User">
            <fetchPlan extends="_base"/>
            <loader/>
        </instance>
    </data>
    <!-- end::data[] -->
    <!-- tag::valuePicker[] -->
    <layout spacing="true">
        <vbox spacing="true">
            <!-- tag::custom-action[] -->
            <valuePicker id="loginValuePicker"
                         caption="msg://login"
                         dataContainer="userDc"
                         property="login">
                <actions>
                    <action id="generate" icon="REFRESH"/>
                </actions>
            </valuePicker>
            <!-- end::custom-action[] -->
            <!-- end::valuePicker[] -->
            <!-- tag::valuePicker-1[] -->
            <valuePicker id="valuePicker"
                         caption="msg://code">
                <actions>
                    <action id="generate"
                            icon="REFRESH"
                            description="msg://codeValPckrDescr"/>
                    <!-- tag::clearAction[] -->
                    <action id="clear" type="value_clear"/>
                    <!-- end::clearAction[] -->
                </actions>
            </valuePicker>
            <!-- end::valuePicker-1[] -->
        </vbox>
    </layout>
</window>
